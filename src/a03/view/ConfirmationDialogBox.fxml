<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="a03.view.ConfirmationDialogBoxController">
	<children>
		<ImageView fx:id="_imageView" fitHeight="680.0" fitWidth="1024.0"
			pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="-500.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-900.0"
			AnchorPane.topAnchor="0.0" />
		<ButtonBar layoutX="186.0" layoutY="146.0" prefHeight="40.0"
			prefWidth="200.0" AnchorPane.bottomAnchor="14.0"
			AnchorPane.leftAnchor="186.0" AnchorPane.rightAnchor="14.0"
			AnchorPane.topAnchor="146.0">
			<buttons>
				<Button fx:id="_save" mnemonicParsing="false" onAction="#handleSave"
					style="-fx-background-color: dimgray; -fx-border-color: black; -fx-border-radius: 30; -fx-background-radius: 30;"
					text="Save" textFill="WHITE" />
				<Button alignment="CENTER" mnemonicParsing="false" onAction="#handleStay"
					style="-fx-background-color: dimgray; -fx-border-color: black; -fx-background-radius: 30; -fx-border-radius: 30;"
					text="Stay" textFill="WHITE" />
				<Button mnemonicParsing="false" onAction="#handleLeave"
					style="-fx-background-color: dimgray; -fx-border-color: black; -fx-border-radius: 30; -fx-background-radius: 30;"
					text="Leave" textFill="WHITE" />
			</buttons>
		</ButtonBar>
		<Label layoutX="45.0" layoutY="116.0" text="Are you sure you want to leave?" />
		<Label layoutX="37.0" layoutY="51.0" text="Confirmation"
			AnchorPane.bottomAnchor="114.0" AnchorPane.topAnchor="50.0">
			<font>
				<Font name="Ubuntu Bold" size="31.0" />
			</font>
		</Label>
		<ImageView fx:id="_logo" fitHeight="70.0" fitWidth="85.0"
			layoutX="375.0" layoutY="32.0" pickOnBounds="true" preserveRatio="true"
			AnchorPane.bottomAnchor="98.0" AnchorPane.leftAnchor="378.0"
			AnchorPane.rightAnchor="32.0" AnchorPane.topAnchor="32.0" />
	</children>
</AnchorPane>
